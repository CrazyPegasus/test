
config listen 'listen'
	option enable4 '1'
	option ipv6 '::1'
	option port '21'
	option dataport '20'
	option ipv4 '192.168.250.254'
	option enable6 '1'

config local 'local'
	option enabled '1'
	option root '/tmp/mnt/'

config global 'global'
	option write '1'
	option download '1'
	option dotfile '0'
	option umask '022'
	option dirlist '1'
	option dirmsgfile '.message'

config connection 'connection'
	option portmode '1'
	option pasvmode '1'
	option ascii 'both'
	option idletimeout '1800'
	option conntimeout '120'
	option dataconntimeout '120'
	option maxclient '0'
	option maxperip '0'
	option maxrate '0'
	option maxretry '3'

config anonymous 'anonymous'
	option enabled '0'
	option username 'ftp'
	option root '/home/ftp'
	option umask '022'
	option writemkdir '0'
	option upload '0'
	option others '0'
	option maxrate '0'

config log 'log'
	option syslog '0'
	option xreflog '1'
	option file '/var/log/vsftpd.log'

config vuser 'vuser'
	option enabled '1'
	option username 'root'

